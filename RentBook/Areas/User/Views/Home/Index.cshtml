@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
}

    <div class="container pt-5">
        <table class="table table-striped table-responsive-sm table-bordered text-center Roboto" style="font-size:100%;">
            <thead class="tableHead">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nazwa</th>
                    <th scope="col">Autor</th>
                    <th scope="col">Data wydania</th>
                    <th scope="col">Opis</th>
                    <th scope="col">Edycja</th>
                    <th scope="col">Rezerwuj</th>
                    <th scope="col">Rezerwacje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>

                        <td style="width:5%;">@book.Id</td>
                        <td style="width:20%;">@book.Name</td>
                        <td style="width:20%;">@book.Author</td>
                        <td style="width:20%;">@book.ReleaseDate r.</td>
                        <td style="width:20%;">@book.Description</td>
                        <td style="width:5%;"><a asp-action="EditOrAdd" asp-area="User" asp-controller="Book" asp-route-id="@book.Id"><i class="far fa-edit"></i></a></td>
                        <td style="width:5%;"><i class="fas fa-plus"></i></td>
                        <td style="width:5%;"><i class="fas fa-search"></i></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
