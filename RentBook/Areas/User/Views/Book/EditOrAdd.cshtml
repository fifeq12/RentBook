@model RentBook.Models.Book

@if (Model != null)
{
    <h1>Edycja książki</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-action="EditOrAdd" asp-route-id="@Model.Id">
        <div class="form-group d-flex flex-column">
            <label for="inputPassword" class="col-sm-2 col-form-label">Nazwa</label>
            <div class="col-sm-10">
                <input type="text" class="form-control formStyles" value="@Model.Name" asp-for="@Model.Name">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group d-flex flex-column">
            <label for="inputPassword" class="col-sm-2 col-form-label">Autor</label>
            <div class="col-sm-10">
                <input type="text" class="form-control formStyles" value="@Model.Author" asp-for="@Model.Author">
                <span asp-validation-for="@Model.Author" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group d-flex flex-column">
            <label for="inputPassword" class="col-sm-2 col-form-label">Rok wydania</label>
            <div class="col-sm-10">
                <input type="number" class="form-control formStyles" value="@Model.ReleaseDate" asp-for="@Model.ReleaseDate">
                <span asp-validation-for="@Model.ReleaseDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group d-flex flex-column">
            <label for="inputPassword" class="col-sm-2 col-form-label">Opis</label>
            <div class="col-sm-10">
                <input type="text" class="form-control formStyles" value="@Model.Description" asp-for="@Model.Description">
            </div>
        </div>
        <button type="submit" class="btn btn-primary mb-2">Edytuj</button>
    </form>
}
else
{
    <h1>Dodawanie nowej książki</h1>
    <form asp-action="EditOrAdd">
        <div class="form-group d-flex flex-column">
            <label for="inputPassword" class="col-sm-2 col-form-label">Nazwa</label>
            <div class="col-sm-10">
                <input type="text" class="form-control formStyles" asp-for="@Model.Name">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group d-flex flex-column">
            <label for="inputPassword" class="col-sm-2 col-form-label">Autor</label>
            <div class="col-sm-10">
                <input type="text" class="form-control formStyles" asp-for="@Model.Author">
                <span asp-validation-for="@Model.Author" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group d-flex flex-column">
            <label for="inputPassword" class="col-sm-2 col-form-label">Rok wydania</label>
            <div class="col-sm-10">
                <input type="number" class="form-control formStyles" asp-for="@Model.ReleaseDate">
                <span asp-validation-for="@Model.ReleaseDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group d-flex flex-column">
            <label for="inputPassword" class="col-sm-2 col-form-label">Opis</label>
            <div class="col-sm-10">
                <input type="text" class="form-control formStyles" asp-for="@Model.Description">
            </div>
        </div>
        <button type="submit" class="btn btn-primary mb-2">Dodaj</button>
    </form>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
