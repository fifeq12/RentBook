@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row pt-5">
    <div class="col-xl-6 col-sm-8 offset-sm-1 offset-xl-3 text-center Roboto">
        <section>
            <form id="account" method="post">
                <h1><b>Logowanie</b></h1>
                <hr />
                <div class="form-group">
                    <label><b>Adres Email</b></label>
                    <input asp-for="Input.Email" class="form-control d-flex justify-content-center" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label><b>Hasło</b></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="customButton p-2 pl-5 pr-5"><b>Zaloguj się</b></button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
