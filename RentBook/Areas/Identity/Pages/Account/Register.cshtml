@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

    <div class="container pt-5">
        <div class="col-xl-6 col-sm-8 offset-sm-1 offset-xl-3 text-center Roboto">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h1><b>Rejestracja</b></h1>
                <h4><b>Stwórz nowe konto</b></h4>
                <hr />
                <div class="form-group">
                    <label><b>Adres Email</b></label>
                    <input asp-for="Input.Email" class="form-control d-flex justify-content-center" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label><b>Hasło</b></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label><b>Powtórz hasło</b></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="customButton p-2 pr-5 pl-5"><b>Zarejestruj się</b></button>
            </form>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
